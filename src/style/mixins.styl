//----------------------------------- 
// GEOMETRY
//----------------------------------- 

square(n)
  width: n
  height: n

circle(n)
  square(n)
  border-radius: n


//----------------------------------- 
// ITERATIVE GEOMETRY
//----------------------------------- 

arc(count, amt, start)
  for i in (1..count)
    .tick:nth-child({i})
      transform: rotate(amt * i + start deg)


//----------------------------------- 
// COLOR
//----------------------------------- 

gradient(origin, colors...)
  fallback = colors[1][0]
  colors = join(', ', colors)
  colors = unquote(colors)

  background-color: fallback
  background-image: -webkit-linear-gradient(origin, colors) // Chrome, Safari
  background-image:    -moz-linear-gradient(origin, colors) // Firefox (3.6 - 15)
  background-image:     -ms-linear-gradient(origin, colors) // IE 10
  background-image:      -o-linear-gradient(origin, colors) // Opera (11.1 - 12.0) 
  background-image:         linear-gradient(origin, colors) // W3C


//----------------------------------- 
// DECORATORS
//----------------------------------- 

tipNumber($n)
  content: '' + $n
  position: absolute
  left: -10px
  top: -10px
  circle(14px)
  border: 1px solid #ddd
  text-align: center
  line-height: 1em
  font-size: 0.7em
  font-weight: bold
  color: #aaa
